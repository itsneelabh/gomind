# Workspace Dockerfile for travel-research-orchestration-example
# This Dockerfile builds using the local workspace with unpublished gomind changes
# Usage (from gomind root): docker build -f examples/agent-with-orchestration/Dockerfile.workspace -t travel-research-agent:latest .

FROM golang:1.25-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git make gcc musl-dev ca-certificates

WORKDIR /workspace

# Copy all modules that are part of the workspace
COPY core/ core/
COPY ai/ ai/
COPY telemetry/ telemetry/
COPY resilience/ resilience/
COPY orchestration/ orchestration/
COPY ui/ ui/

# Copy the example
COPY examples/agent-with-orchestration/ examples/agent-with-orchestration/

# Create a go.work file that references local modules
RUN echo 'go 1.25' > go.work && \
    echo '' >> go.work && \
    echo 'use (' >> go.work && \
    echo '    ./core' >> go.work && \
    echo '    ./ai' >> go.work && \
    echo '    ./telemetry' >> go.work && \
    echo '    ./resilience' >> go.work && \
    echo '    ./orchestration' >> go.work && \
    echo '    ./ui' >> go.work && \
    echo '    ./examples/agent-with-orchestration' >> go.work && \
    echo ')' >> go.work

# Build configuration
ENV CGO_ENABLED=0
ENV GOOS=linux

# Build the binary using workspace
WORKDIR /workspace/examples/agent-with-orchestration
RUN go build -a -installsuffix cgo \
    -ldflags '-w -s -extldflags "-static"' \
    -o travel-research-agent .

# Verify the binary was created
RUN ls -lh travel-research-agent

# Runtime stage
FROM alpine:latest

# Install runtime dependencies
RUN apk --no-cache add ca-certificates tzdata curl

WORKDIR /app

# Create non-root user for security
RUN addgroup -g 1001 -S appgroup && \
    adduser -u 1001 -S appuser -G appgroup

# Copy binary from builder stage
COPY --from=builder /workspace/examples/agent-with-orchestration/travel-research-agent .

# Change ownership to non-root user
RUN chown appuser:appgroup /app/travel-research-agent && \
    chmod +x /app/travel-research-agent
USER appuser

# Set default PORT if not provided
ENV PORT=8094

# Health check - uses PORT environment variable
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:${PORT}/health || exit 1

# Expose port (default 8094, can be overridden by PORT env var)
EXPOSE ${PORT}

# Run the binary
ENTRYPOINT ["./travel-research-agent"]
